{% extends 'layout.html.twig' %}
{% block head %}
    {{parent()}}
    <script type="text/javascript">
        var data = {{data|json_encode|raw}}
    </script>
    <script type="text/javascript" src="js/views/index.js"></script>
{% endblock %}
{% block body %}
	{{ parent() }}

    <!-- CONTAINER -->
    <div class="gridster">
        <ul id="articles">
        </ul>
    </div>


    <!-- TEMPLATES -->
    <script type="text/template" id="article-template">
        <li class="<%-data.class%>" data-id="<%-data.id%>" data-row="1" data-col="2" data-sizex="<%-data.sizex%>" data-sizey="<%-data.sizey%>">
            <icon class="<%-data.class%> pull-left" title="<%-data.class%> (<%-data.type%>)"></icon>
            <div class="content"></div>
            <div class="note"></div>
        </li>
    </script>

    <script type="text/template" id="template-instagram-photo">
        <img src="<%-data.thumbnail_url%>" />
    </script>
    <script type="text/template" id="template-instagram-video">
        <img src="<%-data.thumbnail_url%>" />
    </script>

     <script type="text/template" id="template-youtube-video">
        <iframe id="ytplayer" type="text/html" src="http://www.youtube.com/embed/<%-data.id%>?autoplay=0" frameborder="0"></iframe>
    </script>

{% endblock %}
